<div class="px-4 py-5 my-5 text-center">
    <div class="txt col-lg-6 mx-auto">
      <span>Sube</span>
      <span> tu </span> 
      <span>receta!!</span>
    </div>
    <div class="col-lg-6 mx-auto">
        <p class="lead ">Comparte tu receta con la comunidad rellenando el formulario</p>
    </div>
</div>



<div class="row justify-content-center">
    <% if(infoSubmitObj != ''){ %>
        <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>

      <% if(infoErrorsObj != ''){ %>
        <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
      <% } %>

    <div class="col-8">

        <form action="/submit-recipe" enctype="multipart/form-data" method="POST">
            <div class="row g-3">

                <div class="col-12">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" name="email" id="email" class="form-control"required>
                </div>

                <div class="col-12">
                    <label for="name" class="form-label">Nombre de la receta</label>
                    <input type="text" name="name" id="name" class="form-control "required>
                </div>

                <div class="col-12">
                    <label for="description" class="form-label">Escribe tu receta</label>
                     <textarea name="description" id="description" class="form-control" required cols="30" rows="4"></textarea>
                </div>

                <div class="col-12">
                    <label for="ingredients" class="form-label">Ingredientes</label><br>
                    <small>Ejemplo: Agua, Sal o Harina</small>
                     <div class="ingredientList">
                        <div class="ingredientDiv mb-1">
                         <input type"text" name="ingredients" class="form-control">
                        </div>
                    </div>
                </div>
            

                <div class="col-12">
                  <button type="button" class="miBoton2" id="addIngredientsBtn">Agregar ingrediente</button>
                </div>

                <div class="col-12">
                    <label for="category">Selecciona una categoria</label>
                    <select class="form-select form-control" name="category" aria-label="Category">
                        <option selected>Selecciona una categoria</option>
                        <option value="Colombiana">Colombiana</option>
                        <option value="China">China</option>
                        <option value="Tailandesa">Tailandesa</option>
                        <option value="Indú">Indú</option>
                        <option value="Mexicana">Mexicana</option>
                        <option value="Española">Española</option>
                        <option value="Arabe">Arabe</option>
                        <option value="Gringa">Gringa</option>
                    </select>    
                </div>

                <div class="col-12">
                    <label for="image">Selecciona una imagen</label>
                    <input type="file" class="form-control" name="image" accept="image/*">
            </div>

            <div class="col-12">
                <button type="submit" class="miBoton2">Enviar Receta</button>


        </form>


    </div>

</div>